        <input type="email" id="email" name="email" required><br><br>
        <label for="phone">Enter a phone number:</label><br>
        <input type="tel" id="phone" name="phone" placeholder="123-456-7890" required pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}"><br><br>
        <label for="appointmentdate">Appointment Date:</label><br>
        <input type="date" id="appointmentdate" name="appointmentdate" required><br><b>

        <input type="submit" value="Submit">
      </fieldset>
    </form>
  </body>
</html>

