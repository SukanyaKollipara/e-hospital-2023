        <label for="fname">First name:</label><br>
        <input type="text" id="fname" name="fname" value="" required><br><br>
        <label for="lname">Last name:</label><br>
        <input type="text" id="lname" name="lname" value="" required><br><br>
        <label for="birthday">Birthday:</label><br>
        <input type="date" id="birthday" name="birthday" required><br><br>
        <label for="address">Address:</label><br>
        <input type="text" id="address" name="address" value="" required><br><br>
        <label for="pin">PIN:</label><br>
        <input type="text" id="pin" name="pin" size="6" required pattern="[0-9]{6}"><br><br>
